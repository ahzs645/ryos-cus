# ===========================================
# ryOS Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ----- Creator/Branding -----
# Backend (API) variables
CREATOR_NAME="Ahmad Jalil"
CREATOR_URL="https://ahmadjalil.com"
CREATOR_EMAIL="me@ahmadjalil.com"
CREATOR_GITHUB="https://github.com/ahmadjalil"
COPYRIGHT_START_YEAR="1995"

# Frontend (VITE_) variables - exposed to browser
VITE_CREATOR_NAME="Ahmad Jalil"
VITE_CREATOR_URL="https://ahmadjalil.com"
VITE_CREATOR_EMAIL="me@ahmadjalil.com"
VITE_CREATOR_GITHUB="https://github.com/ahmadjalil"
VITE_COPYRIGHT_START_YEAR="1995"

# ----- AI Assistant -----
# Backend
AI_ASSISTANT_NAME="Ahmad"
AI_ASSISTANT_HANDLE="ahmad"
# Path to persona markdown file (relative to project root)
AI_PERSONA_PATH="content/persona.md"

# Frontend
VITE_AI_ASSISTANT_NAME="Ahmad"
VITE_AI_ASSISTANT_HANDLE="ahmad"

# ----- Social Links -----
TWITTER_URL="https://x.com/ahmadjalil"
LINKEDIN_URL="https://linkedin.com/in/ahmadjalil"
VITE_TWITTER_URL="https://x.com/ahmadjalil"
VITE_LINKEDIN_URL="https://linkedin.com/in/ahmadjalil"

# ----- CV/Profile Data (for dynamic branding) -----
# Path to CV YAML file (relative to public folder, like XPortfolio)
VITE_CV_YAML_PATH="/data/CV.yaml"
# How to extract name from CV: "first", "last", "full", "custom"
VITE_NAME_DISPLAY_MODE="first"
# Custom name when VITE_NAME_DISPLAY_MODE is "custom"
VITE_CUSTOM_NAME=""
# Use CV data for OS branding (true = use name from CV.yaml, false = use VITE_OS_FIRST_NAME)
VITE_USE_CV_FOR_BRANDING="true"

# ----- OS Branding -----
# Backend
OS_NAME="ahmadOS"
OS_URL="https://os.ahmadjalil.com"
OS_GITHUB_URL="https://github.com/ahmadjalil/ryos"

# Frontend
VITE_OS_NAME="ahmadOS"
VITE_OS_URL="https://os.ahmadjalil.com"
VITE_OS_GITHUB_URL="https://github.com/ahmadjalil/ryos"

# Dynamic OS naming (for "firstnameOS X" style branding)
# Fallback first name when CV is not loaded or VITE_USE_CV_FOR_BRANDING is false
VITE_OS_FIRST_NAME="ahmad"
# OS suffix to append after firstName (default: "OS" -> "ahmadOS")
VITE_OS_SUFFIX="OS"
# Suffix style: "themed" (adds X/7/98/XP based on theme), "none", or "custom"
# - "themed": ahmadOS X (macOS X theme), ahmadOS 7 (System 7), ahmadOS 98, ahmadOS XP
# - "none": just "ahmadOS" without suffix
# - "custom": uses VITE_OS_CUSTOM_SUFFIX value
VITE_OS_SUFFIX_STYLE="themed"
# Custom suffix when VITE_OS_SUFFIX_STYLE is "custom" (e.g., "X", "XP", "Pro")
VITE_OS_CUSTOM_SUFFIX=""

# ----- Browser Favorites -----
BROWSER_DEFAULT_URL="https://apple.com"
BROWSER_DEFAULT_YEAR="2001"
VITE_BROWSER_DEFAULT_URL="https://apple.com"
VITE_BROWSER_DEFAULT_YEAR="2001"

# Personal website favorite
FAVORITE_PERSONAL_TITLE="Ahmad"
FAVORITE_PERSONAL_URL="https://ahmadjalil.com"
VITE_FAVORITE_PERSONAL_TITLE="Ahmad"
VITE_FAVORITE_PERSONAL_URL="https://ahmadjalil.com"

# ----- Passthrough Domains -----
# Comma-separated list of domains that bypass the proxy in "now" mode
PASSTHROUGH_DOMAINS="os.ahmadjalil.com,ahmadjalil.com"
VITE_PASSTHROUGH_DOMAINS="os.ahmadjalil.com,ahmadjalil.com"

# ----- Default Settings -----
DEFAULT_THEME="macosx"
DEFAULT_LANGUAGE="en"
VITE_DEFAULT_THEME="macosx"
VITE_DEFAULT_LANGUAGE="en"

# ===========================================
# Feature Flags (for static deployment)
# Set to "false" to disable features that require backend/API
# ===========================================

# Enable/disable the Chats app (AI assistant)
VITE_ENABLE_AI_CHAT="true"

# Enable/disable chat rooms (requires Pusher)
VITE_ENABLE_CHAT_ROOMS="true"

# Enable/disable Internet Explorer's time travel (past/future modes)
# Future mode requires AI, past mode requires Wayback Machine proxy
VITE_ENABLE_IE_TIME_TRAVEL="true"

# Enable/disable voice input (requires Whisper API)
VITE_ENABLE_VOICE_INPUT="true"

# Enable/disable AI applet generation
VITE_ENABLE_AI_APPLETS="true"

# Enable/disable the PC app (3D scene)
VITE_ENABLE_PC_APP="true"

# Static mode - disables all backend-dependent features at once
# When "true", overrides individual feature flags above
VITE_STATIC_MODE="false"

# ===========================================
# API Keys (Required for AI features)
# ===========================================
ANTHROPIC_API_KEY=""
GOOGLE_GENERATIVE_AI_API_KEY=""
OPENAI_API_KEY=""

# ===========================================
# Optional: Pusher (for real-time chat)
# ===========================================
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER=""
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER=""
